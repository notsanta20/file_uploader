generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("LOCAL_DATABASE_URL")
}

model Session {
  id        String   @id
  sid       String   @unique
  data      String
  expiresAt DateTime
}

model Users {
  id       Int       @id @default(autoincrement())
  username String    @unique
  salt     String
  hash     String
  Files    Files[]
  Folders  Folders[]
}

model Files {
  id       Int      @id @default(autoincrement())
  name     String
  size     Int
  date     DateTime
  location String
  owner    Users    @relation(fields: [usersId], references: [id])
  usersId  Int
}

model Folders {
  id       Int    @id @default(autoincrement())
  name     String @default("/")
  location String
  owner    Users  @relation(fields: [usersId], references: [id])
  usersId  Int
}
