generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("LOCAL_DATABASE_URL")
}

model Session {
  id        String   @id
  sid       String   @unique
  data      String
  expiresAt DateTime
}

model Users {
  id       Int       @id @default(autoincrement())
  username String    @unique
  salt     String
  hash     String
  Files    Files[]
  Folders  Folders[]
}

model Files {
  id       String   @id @default(uuid())
  name     String
  size     Int
  date     DateTime @default(now())
  folderId String?
  folder   Folders? @relation(fields: [folderId], references: [id], onDelete: Cascade)
  path     String
  owner    Users    @relation(fields: [usersId], references: [id])
  usersId  Int
}

model Folders {
  id       String    @id @default(uuid())
  name     String    @default("/")
  parentId String?
  parent   Folders?  @relation("parentChildren", fields: [parentId], references: [id], onDelete: Cascade)
  children Folders[] @relation("parentChildren")
  owner    Users     @relation(fields: [usersId], references: [id])
  usersId  Int
  Files    Files[]
}

model LinkSession {
  id     String   @id @default(uuid())
  fileId String
  expiry DateTime
}
